                                        <Slider x:Name="Slider5" Foreground="#6D6D6D" Style="{StaticResource PhoneProgressBarSliderStyle}"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

