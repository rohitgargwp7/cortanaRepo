<phone:PhoneApplicationPage 
    x:Class="windows_client.EnterName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480"
    shell:SystemTray.IsVisible="False" Name="enterName"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit">

    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardIn"/>
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn"/>
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut"/>
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut"/>
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>



    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Margin="0,0,0,0" Grid.RowSpan="2" >
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="500" >
                <Image Source="images\hike_logo_small.png" Height="40" Margin="0,15,0,0"></Image>
                <Rectangle Height="2" Margin="2,15,0,0" Fill="#2e91d3"></Rectangle>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="Auto" Height="60">
                    <TextBlock Foreground="Black" TextWrapping="Wrap" Text="Your are all set on" FontSize="24"  TextAlignment="Center" Margin="-11,28,8,0" d:LayoutOverrides="GridBox" RenderTransformOrigin="0.5,0.5" Height="40" VerticalAlignment="Top" />
                    <TextBlock x:Name="txtBlckPhoneNumber" Foreground="Black" TextWrapping="Wrap" Text="" FontSize="25"  TextAlignment="Center" Margin="0,27,8,0" d:LayoutOverrides="GridBox" RenderTransformOrigin="0.5,0.5" Height="40" VerticalAlignment="Top" />
                </StackPanel>
                <TextBlock Foreground="Black" TextWrapping="Wrap" Text="What's your name?" FontSize="24" TextAlignment="Center" Margin="0,0,0,0" d:LayoutOverrides="GridBox" RenderTransformOrigin="0.497,2.059" Height="40" VerticalAlignment="Top" />
                <Border BorderThickness="2" Width="310" Height="56" Margin="5,10,0,0" BorderBrush="Black">
                    <StackPanel Orientation="Horizontal" Height="50"   Width="320" Margin="0,0,0,0" >
                        <Image Source="images\enter_name.png" Margin="15,10,0,10" Height="20" />
                        <toolkit:PhoneTextBox x:Name="txtBxEnterName" GotFocus="txtBxEnterName_GotFocus" Foreground="Black" BorderThickness="0" Margin="0,-10,0,0" Width="250" Height="70" TextChanged="txtBxEnterName_TextChanged" />
                    </StackPanel>
                </Border>
                <!--<Button x:Name="enterNameBtn" BorderThickness=".8" Background="#2e91d3" BorderBrush="#1c577f" Foreground="White" Margin="37,10,37,429" Content="Lets hike" d:LayoutOverrides="GridBox" RenderTransformOrigin="0.5,0.5" Height="72" Click="btnEnterName_Click" Width="344">
                </Button>-->
                <TextBlock x:Name="enterNameBtn" Text="" FontSize="22" Foreground="Black" Opacity="0" Margin="150,80,0,0"></TextBlock>
                <toolkit:PerformanceProgressBar x:Name="progressBar" Foreground="Black" Background="#FFF2F6F8" IsIndeterminate="True" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="24" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" IsEnabled="False" IsTabStop="True" Visibility="Collapsed" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</phone:PhoneApplicationPage>
