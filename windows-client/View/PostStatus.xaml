<phone:PhoneApplicationPage
    x:Class="windows_client.View.PostStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="False" Name="postStatusPage">

    <phone:PhoneApplicationPage.Resources>
        <Style TargetType="ContentControl" x:Key="HintCustomStyle">
            <Setter Property="Height" Value="125"></Setter>
            <Setter Property="Width" Value="310"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>
    </phone:PhoneApplicationPage.Resources>
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="#444444">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtStatusHeader" Margin="25, 35, 24, 5" Text="{Binding Path= LocalizedResources.NewStatus_Txt, Source={StaticResource LocalizedStrings}}"  Grid.Row="0" HorizontalAlignment="Left" FontSize="22" FontFamily="Segoe WP Regular" Foreground="White"  />
        <Grid Grid.Row="1" Height="210" VerticalAlignment="Top" Background="Black" Margin="24 12 24 0">
            <Grid.RowDefinitions>
                <RowDefinition  Height="Auto"/>
                <RowDefinition  Height="*"/>
            </Grid.RowDefinitions>
            <Rectangle VerticalAlignment="Top" HorizontalAlignment="Left" Width="455" Height="155" Grid.Row="0" Fill="White"/>
            <StackPanel Orientation="Horizontal" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="455" Height="155" Grid.Row="0" >
                <Image Name="userImage"  Height="80" Width="80" VerticalAlignment="Top" Margin="15"/>
                <Image Name="postedMood"  Height="30" Width="30" VerticalAlignment="Top" Margin="10 22 0 0" Visibility="Collapsed"/>
                <toolkit:PhoneTextBox InputScope="Text"  VerticalAlignment="Top" x:Name="txtStatus" HorizontalAlignment="Left" Width="310" Height="155" Background="White" BorderThickness="0"  Grid.Row="0" TextWrapping="Wrap" HintStyle="{StaticResource HintCustomStyle}" VerticalContentAlignment="Top" Tap="txtStatus_Tap" GotFocus="txtStatus_GotFocus" />
            </StackPanel>

            <Grid Grid.Row="1" Margin="0 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Height="50" Width="50" Margin="20 -10 0 0" Grid.Column="0" Tap="FbIcon_Tap" >
                    <Button Height="60" Width="60" BorderThickness="0"  Margin="0" Padding="0">
                        <Image Name="fbIconImage" Source="/View/images/fb_status_disabled.png" VerticalAlignment="Center" HorizontalAlignment="Left"  Height="35" ></Image>
                    </Button>

                </StackPanel>
                <StackPanel Height="50" Width="50" Margin="20 -10 0 0" Grid.Column="1" Tap="TwitterIcon_Tap" HorizontalAlignment="Left" >
                    <Button Height="60" Width="60" BorderThickness="0"  Margin="0" Padding="0">
                        <Image Name="twitterIconImage" Source="/View/images/twitter_status_disabled.png"  VerticalAlignment="Center"  Height="35" ></Image>
                    </Button>
                </StackPanel>
                    
                <StackPanel Height="50" Width="50" Margin="0 -10 10 0" Grid.Column="2" Tap="Mood_Tap">
                    <Button Height="60" Width="60" BorderThickness="0"  Margin="0" Padding="0">
                        <Image Name="moodIconImage" Source="/View/images/moods_status_icon_disabled.png" Width="40"   VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Name="gridMood" Grid.Row="0" Grid.RowSpan="2" Visibility="Collapsed" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="SELECT MOOD" FontSize="22" FontFamily="Segoe WP Regular"  Margin="26 40 12 12" Foreground="Gray"></TextBlock>
            <ListBox  Name="moodListBox" BorderThickness="18,0,0,0" Grid.Row="1" Margin="12 0 12 0" Tap="moodList_Tap">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0 24 0 0">
                            <Image Height="40" Width="40" Source="{Binding MoodImage}"/>
                            <TextBlock Text="{Binding MoodName}" FontSize="24" VerticalAlignment="Center" FontFamily="Segoe WP Regular" Foreground="Gray" Margin="12 0 0 0" ></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>

</phone:PhoneApplicationPage>