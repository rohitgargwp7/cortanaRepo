<phone:PhoneApplicationPage
    x:Class="windows_client.View.PostStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="False" Name="postStatusPage">

    <phone:PhoneApplicationPage.Resources>
        <Style TargetType="ContentControl" x:Key="HintCustomStyle">
            <Setter Property="Height" Value="120"></Setter>
            <Setter Property="Width" Value="310"></Setter>
            <Setter Property="Foreground" Value="#9b9b9b"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>
    </phone:PhoneApplicationPage.Resources>
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="#444444">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtStatusHeader" Margin="24, 20, 24, 5" Text="{Binding Path= LocalizedResources.NewStatus_Txt, Source={StaticResource LocalizedStrings}}"  Grid.Row="0" HorizontalAlignment="Left" FontSize="22" FontFamily="Segoe WP Regular" Foreground="White"  />
        <Grid Grid.Row="1" VerticalAlignment="Top" Background="#ffffff" Margin="0 12 0 0">
            <Grid.RowDefinitions>
                <RowDefinition  Height="Auto"/>
                <RowDefinition  Height="*"/>
            </Grid.RowDefinitions>
            <Grid Name="gridContent" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="480" Height="210" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image Name="moodImage" Source="images/timeline_status_icon.png"  Height="40" Width="40" VerticalAlignment="Top" Margin="24 24 0 0" Grid.Column="0"/>
                <ScrollViewer Name="svStatusText" Height="165" Grid.Column="2" Margin="0 -15 0 0">
                    <toolkit:PhoneTextBox Name="txtStatus" InputScope="Text" AcceptsReturn="True"  VerticalAlignment="Top" HorizontalAlignment="Left" Background="White" BorderThickness="0"  TextWrapping="Wrap" HintStyle="{StaticResource HintCustomStyle}" VerticalContentAlignment="Top" GotFocus="txtStatus_GotFocus" LostFocus="txtStatus_LostFocus_1" TextChanged="txtStatus_TextChanged" Width="345"  />
                </ScrollViewer>
                <toolkit:PhoneTextBox Name="txtCounter" Width="70" Visibility="Collapsed" Background="White" Text="140"  BorderThickness="0" Foreground="Gray" Grid.Column="3"  IsHitTestVisible="False" TextAlignment="Right" Margin="0 10 0 0"/>
            </Grid>
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Height="50" Width="50" Margin="24 0 0 0" Grid.Column="0" Tap="FbIcon_Tap" >
                    <Image Name="fbIconImage" Source="/View/images/fb_status_disabled.png" VerticalAlignment="Center" HorizontalAlignment="Left"  Height="35" ></Image>
                </StackPanel>
                <StackPanel Height="50" Width="50" Margin="20 0 0 0" Grid.Column="1" Tap="TwitterIcon_Tap" HorizontalAlignment="Left" >
                    <Image Name="twitterIconImage" Source="/View/images/twitter_status_disabled.png"  VerticalAlignment="Center"  Height="35" Width="35" ></Image>
                </StackPanel>
                <StackPanel Height="50" Width="50" Margin="0 0 24 0" Grid.Column="2" Tap="Mood_Tap">
                    <Image Source="/View/images/moods_status_icon.png" Width="40" VerticalAlignment="Center" Tap="Mood_Tap"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Name="gridMood" Grid.Row="0" Grid.RowSpan="2" Visibility="Collapsed" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="SELECT MOOD" FontSize="24" FontFamily="Segoe WP Regular"  Margin="26 40 12 12" Foreground="Gray"></TextBlock>
            <ListBox  Name="moodListBox"  Grid.Row="1" Margin="20 15 12 30" Tap="moodList_Tap">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0 0 0 25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Height="{Binding MoodHeight}" Width="{Binding MoodHeight}" Source="{Binding MoodImage}"/>
                            <TextBlock Grid.Column="1" Text="{Binding MoodName}" FontSize="26" VerticalAlignment="Center" FontFamily="Segoe WP Regular" Foreground="Gray" Margin="12 0 0 0" ></TextBlock>
                        </Grid>

                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>

</phone:PhoneApplicationPage>