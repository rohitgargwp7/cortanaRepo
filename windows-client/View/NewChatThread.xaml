                </Button>

                <Button Grid.Column="0" Grid.Row="1" Margin="0,1,1,0" Background="#292929" Tap="sendAudio_Tap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" toolkit:TiltEffect.IsTiltEnabled="True" Style="{StaticResource AttachmentIconButtonStyle}">
