                        </Border>
                        <Border Name="emotHeaderRect2"  Grid.Column="3" Background="#4d4d4d" Margin="2,0,0,0"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Tap="emotHeaderRect2_Tap">
                            <Image Source="images\emoticons\emo_im_111_grin.png" Height="30" Margin="0 4 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
