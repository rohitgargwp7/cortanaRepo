<phone:PhoneApplicationPage 
    x:Class="windows_client.View.GroupInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480"
    Name="groupInfoPage" shell:SystemTray.IsVisible="True">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <!--Pivot Control-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="HikeTitle" Grid.Row="0" Orientation="Vertical" Margin="0,0,0,0" Height="Auto">
            <StackPanel Orientation="Horizontal">
                <Image Source="images\hike_header.png" Margin="23,25,0,0" HorizontalAlignment="Left" Height="40" Width="127"></Image>
                <StackPanel Orientation="Horizontal" Name="progressBarStackPanel" Opacity="0">
                    <TextBlock Name="progressTxtBlk" Text="Loading" VerticalAlignment="Bottom" 
                               Opacity="1" Foreground="{StaticResource PhoneForegroundBrush}"/>
                    <toolkit:PerformanceProgressBar x:Name="progressBar"
                                                VerticalAlignment="Bottom" 
                                                Margin="0,0,0,5" 
                                                Background="Transparent" 
                                                IsIndeterminate="True" 
                                                VerticalContentAlignment="Center"
                                                FontSize="24" 
                                                HorizontalAlignment="Left" 
                                                HorizontalContentAlignment="Center" 
                                                IsEnabled="false" IsTabStop="True" 
                                                Opacity="1" Height="11" Width="194" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="group info" FontSize="60" FontStretch="Expanded"  Margin="23,0,0,0" Height="80"/>
        </StackPanel>

        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="30, 10, 0,0" Height="100">
                <Button Height="Auto">
                    <StackPanel Orientation="Horizontal" Margin="-15">
                        <Border BorderBrush="Black" BorderThickness="3">
                            <Image x:Name="groupImage" Height="80" Width="80" Tap="onGroupProfileTap" Source="images\default_group.png" />
                        </Border>
                    </StackPanel>
                </Button>
                <StackPanel Orientation="Vertical" Margin="0, 0,0,0">
                    <TextBlock FontSize="24" Opacity="0.6" Text="Group Name" Margin="20,2,0,0"/>
                    <TextBox Name="groupNameTxtBox" Text="GROUP NAME" Height="68" 
                             VerticalAlignment="Center" Width="330" 
                             FontSize="24" TextWrapping="Wrap"></TextBox>
                    <!--<StackPanel Background="#e5e5e5" Orientation="Vertical" Margin="0,12,0,5" Height="Auto">
                        <TextBlock Margin="10,0,0,5"  TextWrapping="Wrap" x:Name="groupName" Text="Sample" Foreground="Black" FontSize="30" Width="290"></TextBlock>
                    </StackPanel>-->
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="35,30,0,0">
                <Image Name="addUserImage" Source="images\add_users.png" Tap="AddParticipants_Tap" Width="35" Height="35"></Image>
                <TextBlock Text="Participants" FontSize="35" Margin="20,0,0,0" Tap="AddParticipants_Tap"></TextBlock>
            </StackPanel>
            <ListBox x:Name="groupChatParticipants" Grid.Row="2" Margin="35,5,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Height="25" Width="25" Fill="{Binding SquareColor}"></Rectangle>
                            <TextBlock Text="{Binding Name}" FontSize="30" Margin="20,0,0,0"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Grid.Row="3">
                <Button Content="Invite SMS participants to hike" Tap="inviteSMSUsers_Tap" Height="90" FontSize="20" BorderThickness="2" Width="380"></Button>
            </StackPanel>

        </Grid>
    </Grid>
</phone:PhoneApplicationPage>
