<UserControl x:Class="windows_client.Controls.InAppTipUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Tap="LayoutRoot_Tap_1">
        <Grid.RowDefinitions>
            <RowDefinition Height="14"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
        </Grid.RowDefinitions>
        <Path x:Name="topBubblePointer" Data="M0,0 L1,1 L-1,1" HorizontalAlignment="Left" Fill="{StaticResource PhoneForegroundBrush}" Stretch="Fill" UseLayoutRounding="False" Width="16" />
        <Grid Grid.Row="1" Background="{StaticResource PhoneForegroundBrush}" >
            <TextBlock Margin="10" x:Name="tipText" TextWrapping="Wrap" Foreground="{StaticResource PhoneBackgroundBrush}"/>
        </Grid>
        <Path Grid.Row="2" Name="bottomBubblePointer" Data="M0,0 L-1,-1 L1,-1 " HorizontalAlignment="Right" Stretch="Fill" UseLayoutRounding="False" Width="16"  Fill="{StaticResource PhoneForegroundBrush}" />
    </Grid>
</UserControl>