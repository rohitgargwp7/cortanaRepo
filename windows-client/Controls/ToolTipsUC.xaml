<UserControl x:Class="windows_client.Controls.ToolTipsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="toolTipGrid" Tap="toolTipGrid_Tap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="leftIcon" Grid.Column="0" HorizontalAlignment="Left" Height="55" Width="55" VerticalAlignment="Center" Tap="leftIcon_Tap" Margin="12,0,12,0" Visibility="Collapsed"/>
        <TextBlock x:Name="tipTextbox" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="12,0,12,0" Foreground="White"/>
        <Image x:Name="rightIcon" Grid.Column="2" HorizontalAlignment="Right" Height="22" Width="22" VerticalAlignment="Center" Tap="rightIcon_Tap" Margin="12,0,12,0" Visibility="Collapsed"/>
    </Grid>
</UserControl>